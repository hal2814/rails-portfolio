
<h1 class="head-font">Featured Projects</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Date</th>
      <th>Description</th>
      <th></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @projects.each do |project| %>
    <div class="card">
      <div class="card-header">
        <tr>
        <td><%= project.name %></td>
        </div>
        <div class="card-body">

            <td><%= project.date %></td>
            <td><%= project.description %></td>
            <td><%= image_tag project.image %></td>
            <td><%= link_to 'Show', project %></td>
            <% if current_user %>
              <td><%= link_to 'Edit', edit_project_path(project) %></td>
              <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            <% end %>
          </tr>
      </div>
    </div>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Project', new_project_path %>
