

<div class="card">
  <div class="card-header">
    <h1>
      <strong>Project:</strong>
      <%= @project.name %>
    </h1>
  </div>
  <div class="card-body">
    <p>
      <%= @project.date %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @project.description %>
    </p>

    <%= image_tag @project.image %>

    <h4>Technologies used:</h4>
    <% @tags.each do |tag| %>
      <p><%= tag.tag  %></p>
    <% end %>

    <br>
    <%= link_to 'Edit', edit_project_path(@project) %> |
    <%= link_to 'Back', projects_path %>
  </div>
</div>
