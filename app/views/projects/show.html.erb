<p id="notice"><%= notice %></p>

<div class="card">
  <div class="card-header">
    <h1>
      <strong>Project:</strong>
      <%= @project.name %>
    </h1>
  </div>
  <div class="card-body">
    <p>
      <strong>Date:</strong>
      <%= @project.date %>
    </p>

    <p>
      <strong>Description:</strong>
      <%= @project.description %>
    </p>

    <%= image_tag @project.image %>

    <%= link_to 'Edit', edit_project_path(@project) %> |
    <%= link_to 'Back', projects_path %>
  </div>
</div>
